{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.cmm.vindicator.bob": {
      "initial_state": "default",
      "states": {
        "chase_target": {
          "animations": [ "bob.chase" ],
          "transitions": [
            {
              "default": "!variable.has_target"
            }
          ]
        },
        "default": {
          "animations": [ "bob" ],
          "transitions": [
            {
              "chase_target": "variable.has_target"
            }
          ]
        }
      }
    },
    "controller.animation.cmm.vindicator.riding.arms": {
      "initial_state": "default",
      "states": {
        "default": {
          "transitions": [
            {
              "riding": "!variable.has_target && query.is_riding"
            },
            {
              "riding_attack": "variable.has_target && query.is_riding"
            }
          ]
        },
        "riding": {
          "blend_transition": 0.2,
          "blend_via_shortest_path": true,
          "animations": [ "riding.arms" ],
          "transitions": [
            {
              "default": "variable.has_target || !query.is_riding"
            }
          ]
        },
        "riding_attack": {
          "blend_transition": 0.2,
          "blend_via_shortest_path": true,
          "animations": [ "riding.arms.attack" ],
          "transitions": [
            {
              "default": "!variable.has_target || !query.is_riding"
            }
          ]
        }
      }
    },
    "controller.animation.cmm.vindicator.move": {
      "initial_state": "default",
      "states": {
        "default": {
          "blend_transition": 0.2,
          "blend_via_shortest_path": true,
          "animations": [ "move" ],
          "transitions": [
            {
              "celebrating": "query.is_celebrating"
            },
            {
              "hand_attack": "!query.is_item_equipped && variable.has_target && variable.attack_time >= 0.0"
            },
            {
              "melee_attack": "query.is_item_equipped && variable.has_target && variable.attack_time >= 0.0"
            }
          ]
        },
        "hand_attack": {
          "blend_transition": 0.2,
          "blend_via_shortest_path": true,
          "animations": [ "vindicator_hand_attack", "move.legs" ],
          "transitions": [
            {
              "default": "query.is_item_equipped || !variable.has_target || variable.attack_time < 0.0 || query.is_celebrating"
            }
          ]
        },
        "melee_attack": {
          "blend_transition": 0.2,
          "blend_via_shortest_path": true,
          "animations": [ "vindicator_attack", "move.legs" ],
          "transitions": [
            {
              "default": "!query.is_item_equipped || !variable.has_target || variable.attack_time < 0.0 || query.is_celebrating"
            }
          ]
        },
        "celebrating": {
          "blend_transition": 0.2,
          "blend_via_shortest_path": true,
          "animations": [ "celebrating", "move.legs" ],
          "transitions": [
            {
              "default": "!query.is_celebrating"
            }
          ]
        }
      }
    }
  }
}