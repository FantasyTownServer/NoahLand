{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.shield.wield": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": [
            {
              "wield_main_hand_first_person": "c.item_slot == 'main_hand'"
            },
            {
              "wield_off_hand_first_person": "c.item_slot != 'main_hand'"
            }
          ],
          "transitions": [
            {
              "blocking": "query.blocking"
            },
            {
              "third_person": "!c.is_first_person"
            }
          ]
        },
        "blocking": {
          "animations": [
            {
              "wield_main_hand_first_person_block": "query.blocking && query.is_item_name_any('off_hand') != 'shield' || query.is_item_name_any('off_hand') != 'shield' && query.is_item_name_any == 'shield' || query.is_item_name_any == 'sandshield' && c.item_slot == 'main_hand'"
            },
            {
              "wield_off_hand_first_person_block": "query.blocking && query.is_item_name_any('off_hand') == 'shield' || query.is_item_name_any('off_hand') == 'sandshield' && c.item_slot != 'main_hand'"
            }
          ],
          "transitions": [
            {
              "default": "!query.blocking"
            },
            {
              "third_person": "!c.is_first_person"
            }
          ]
        },
        "third_person": {
          "animations": [
            "wield_third_person"
          ],
          "transitions": [
            {
              "default": "c.is_first_person"
            }
          ]
        }
      }
    }
  }
}